            LayoutMode: Top;

            Label {
              Style: (...@SectionTitleStyle, HorizontalAlignment: Center, FontSize: 22, TextColor: #f1cb71, RenderBold: true);
              Text: "How stats work";
              Anchor: (Bottom: 10, Left: 0, Right: 0);
