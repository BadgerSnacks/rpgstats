                Anchor: (Width: 50);
              }

              Group {
                Anchor: (Width: @StatValueWidth, Height: @StatValueHeight);
                Background: $C.@InputBoxBackground;
                LayoutMode: Center;

                Label #StrValue {
                  Style: @StatValueStyle;
                  Text: "10";
